extends ../layouts/common
block content
    if error
        .alert.alert-danger=error

    form(method="post")
        .form-group
            label Email address
            input.form-control(type='email', name="email", aria-describedby='emailHelp', placeholder='Enter email', value=values ? values.email : '')
        .form-group
            label Password
            input.form-control(type='password', name="password", placeholder='Password', value=values ? values.password : '')
        button.btn.btn-primary.d-block.mx-auto(type='submit') Login